# Load order: "before" scripts are sourced numerically before oh-my-zsh
# Use two-digit prefixes (00-99) to control load order
# The (n) glob qualifier enables NUMERIC_GLOB_SORT for proper ordering
# Example: 00_base.zsh loads before 50_tools.zsh
if [ -d "$HOME/.zsh.d/before" ]; then
  for z in $HOME/.zsh.d/before/*.zsh(n); do source $z; done
fi

# vi stuff
bindkey -v
export EDITOR=nvim

# configure oh my zsh theme and bundles
ZSH_THEME=robbyrussell
export VI_MODE_SET_CURSOR=true
export VI_MODE_DISABLE_CLIPBOARD=true

# Antigen to install oh-my-zsh and bundles
# Note: bundles without path are found in oh-my-zsh repo
source ~/.antigen.zsh
antigen use oh-my-zsh
# doesn't work well with monorepo
#antigen bundle git
antigen bundle vi-mode
#antigen bundle mise
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-completions
antigen bundle zsh-users/zsh-history-substring-search

# try robbyrussel theme for a while
#antigen theme fishy
antigen apply

# configuration for zsh-users/zsh-history-substring-search
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down
HISTORY_SUBSTRING_SEARCH_ENSURE_UNIQUE=1

# Load order: "after" scripts are sourced numerically after oh-my-zsh
# Use two-digit prefixes (00-99) to control load order
# The (n) glob qualifier enables NUMERIC_GLOB_SORT for proper ordering
# Tool managers (homebrew, mise, etc.) should load early (00-19)
# so their binaries are available for later scripts
if [ -d "$HOME/.zsh.d/after" ]; then
  for z in $HOME/.zsh.d/after/*.zsh(n); do source $z; done
fi

if [ -d "$HOME/.local/bin" ]; then 
  export PATH=$HOME/.local/bin:$PATH
fi
